<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clothes Online :: @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-white">
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark bg-danger border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Clothes Online</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Página Principal</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacidade">Política de Privacidade</a>
                        </li>
                    </ul>
                    <div class="align-self-end">
                        <partial name="_LoginLinks" />
                    </div>                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col">
                    &copy: 2023 - Clothes Online - <a asp-area="" asp-page="/Privacidade">Política de Privacidade</a>
                </div>
                <div class="col text-right">
                    <a asp-area="" asp-page="/Admin">Administrar</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script defer src="https://friconix.com/cdn/friconix.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
